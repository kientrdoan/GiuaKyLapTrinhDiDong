<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    tools:context=".VertifyOPT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/back"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="#fff"
            android:src="@drawable/icon_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Quản Lý Thư Viện"
            android:gravity= "center"
            android:textSize="33sp"
            android:textColor="#E91E63"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OPT Vertification"
        android:textSize="30dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="100dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_sms_vertify"
        android:layout_marginTop="22dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Enter The OPT"
        android:textSize="24dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_marginTop="22dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center">
        <EditText
            android:id="@+id/code_input_1"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="#000"
            android:importantForAutofill="no"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/code_input_2"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="#000"
            android:importantForAutofill="no"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/code_input_3"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="#000"
            android:importantForAutofill="no"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/code_input_4"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="#000"
            android:importantForAutofill="no"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/code_input_5"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="#000"
            android:importantForAutofill="no"
            android:layout_marginRight="5dp"/>
        <EditText
            android:id="@+id/code_input_6"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:textSize="24dp"
            android:maxLength="1"
            android:inputType="number"
            android:textColor="#000"
            android:importantForAutofill="no"
            android:layout_marginRight="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Didn't receive OPT?"
            android:textSize="22dp"/>
        <Button
            android:id="@+id/btnResendOPT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESEND"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:textColor="#E80B0B" />
    </LinearLayout>
    <Button
        android:id="@+id/btnVertify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vertify"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"/>


</LinearLayout>